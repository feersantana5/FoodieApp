<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MenuDetailActivity">

    <ImageView
        android:id="@+id/detallemenu1"
        android:layout_width="391dp"
        android:layout_height="223dp"
        android:contentDescription="@string/detallemenu1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/detallemenu1" />

    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="413dp"
        android:layout_marginTop="222dp"
        android:background="#F3DCF0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detallemenu1">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="387dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:background="#EDCCE9"
            android:orientation="vertical">>

            <TextView
                android:id="@+id/datos"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sniglet"
                android:text="@string/datos"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>